<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <com.su.primeavto.view.customview.CustomEditView
        android:id="@+id/edt_phone_number_of_authorisation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:layoutDirection="ltr"
        android:src="@drawable/ic_phone"
        app:countryCodeVisibility="visible"
        app:hint="@string/phone_number"
        app:inputType="phone"
        android:layout_margin="@dimen/margin_16dp"
        app:isEditText="true"
        app:isLeftIconChangeable="true"
        app:layout_constraintBottom_toTopOf="@+id/btn_send"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />


    <com.dx.dxloadingbutton.lib.LoadingButton
        android:id="@+id/btn_send"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:lb_resetAfterFailed="true"
        android:layout_margin="@dimen/margin_16dp"
        app:lb_btnDisabledColor="@color/disabledColor"
        app:lb_disabledTextColor="@color/white"
        app:lb_textColor="@color/white"
        app:lb_btnColor="@color/appRed"
        app:lb_cornerRadius="32dp"
        app:lb_rippleEnable="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_phone_number_of_authorisation"
        app:layout_constraintBottom_toBottomOf="parent"
        app:lb_btnText="@string/send"
        />


</androidx.constraintlayout.widget.ConstraintLayout>


