<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.fragment.OTPValidationFragment">


    <com.mukesh.OtpView
        android:id="@+id/otp_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:layout_gravity="center"
        android:textColor="@color/black"
        app:itemCount="4"
        android:layout_margin="@dimen/margin_16dp"
        app:itemSpacing="16dp"
        app:itemWidth="30dp"
        app:itemHeight="42dp"
        android:textIsSelectable="true"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btn_send"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:lineColor="@color/black"
        app:viewType="line" />


    <com.dx.dxloadingbutton.lib.LoadingButton
        android:id="@+id/btn_send"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:lb_resetAfterFailed="true"
        android:layout_margin="@dimen/margin_16dp"
        app:lb_btnDisabledColor="@color/disabledColor"
        app:lb_disabledTextColor="@color/white"
        app:lb_textColor="@color/white"
        app:lb_btnColor="@color/appRed"
        app:lb_cornerRadius="32dp"
        app:lb_rippleEnable="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/otp_view"
        app:layout_constraintBottom_toBottomOf="parent"
        app:lb_btnText="@string/send"
        />



</androidx.constraintlayout.widget.ConstraintLayout>